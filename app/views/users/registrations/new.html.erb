<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header"><%= t("users.register_user") %></div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.text_field :login, class: "form-control input-lg", placeholder: t("users.login") %>
          </div>

          <div class="form-group">
            <%= f.text_field :email, class: "form-control input-lg", placeholder: t("users.email") %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: "form-control input-lg", placeholder: t("users.password") %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: t("users.password_confirmation") %>
          </div>

          <div class="form-group">
            <div class="input-group">
              <%= rucaptcha_input_tag(class: "form-control input-lg", placeholder: t("users.captcha")) %>
              <span class="input-group-addon input-group-captcha"><a class="rucaptcha-image-box" href="#"><%= rucaptcha_image_tag %></a></span>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit t("common.submit_new_user"), class: "btn btn-lg btn-primary" %>
            <%= link_to t("common.login"), new_user_session_path(resource_name), class: "btn btn-lg btn-default" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
