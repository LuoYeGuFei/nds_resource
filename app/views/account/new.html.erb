<div class="row">
  <div class="col"></div>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), method: :post, remote: true do |f| %>
          <div class="form-group">
            <%= f.text_field :username, class: "form-control input-lg", placeholder: "用户名" %>
          </div>

          <div class="form-group">
            <%= f.text_field :email, class: "form-control input-lg", placeholder: "邮箱" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: "form-control input-lg", placeholder: "密码" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "确认密码" %>
          </div>

          <div class="form-group">
            <div class="input-group">
              <%= rucaptcha_input_tag(class: "form-control input-lg", placeholder: "验证码") %>
              <span class="input-group-addon"><a class="rucaptcha-image-box" href="#"><%= rucaptcha_image_tag %></a></span>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "提交注册信息", class: "btn btn-lg btn-primary" %>
            <%= link_to "登录", "new_session_path(resource_name)", class: "btn btn-lg btn-default" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
  <div class="col"></div>
</div>
