<div class="row">
  <div class="col"></div>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">用户登录</div>
      <div class="card-body">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), remote: true do |f| %>
          <div class="form-group">
            <%= f.text_field :username, class: "form-control input-lg", placeholder: "用户名/Email" %>
          </div>

          <div class="form-group">
            <%= f.text_field :email, type: :email, class: "form-control input-lg", placeholder: "邮箱" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: "form-control input-lg", placeholder: "密码" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "密码确认" %>
          </div>
          <div class="form-group">
            <div class="input-group">
              <%= rucaptcha_input_tag(class: 'form-control input-lg', placeholder: "验证码") %>
              <span class="input-group-addon input-group-captcha"><a class="rucaptcha-image-box" href="#"><%= rucaptcha_image_tag %></a></span>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "登录", class: "btn btn-lg btn-primary", 'data-disable-with' => t("common.submitting") %>
            <%= link_to t("common.login"), new_session_path(resource_name), class: "btn btn-lg btn-default hide-ios" %>

          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col"></div>
</div>
